                    <p class="text-xl text-accent">Up for sale</p>
                    {{else}}
                    <p class="text-xl">Not up for sale</p>
                    {{/if}}
                </div>
                <h2 class="card-title">{{art.title}}</h2>
                <p class="text-accent">{{art.description}}</p>
                <div class="card-actions justify-end">
                    <button class="btn btn-secondary text-accent viewButton" style="margin-bottom: 1vw; margin-left:1vw; background-color:rgb(15, 17, 31); border-color: rgb(15, 17, 31);">View</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

