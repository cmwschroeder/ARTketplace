<div class="w-full h-full flex flex-row flex-wrap justify-around" id="art-section">
        {{#each theCollection.artPieces as |art|}}
        <div class="card w-96 bg-base-100 shadow-xl m-3">
            <figure><img class="h-48" src={{art.image}} alt="Art Piece" /></figure>
            <div class="card-body">
                <div class="w-full text-center">
                    <p class="text-3xl">${{art.price}}</p>
