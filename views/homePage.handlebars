<div
  class="hero min-h-screen"
  style="background-image: url(/assets/hero.png);"
>
</div>

<div class="w-11/12 mx-3 mt-10 mb-3 flex flex-row justify-around">
  <button class="btn btn-primary m-2 w-1/3" id="Sort-button">
    <select class="sort-art select select-ghost w-full max-w-xs">
      <option disabled selected>Sort By...</option>
      <option >Lower to Higher</option>
      <option >Higher to Low</option>
    </select>
  </button>
  <button class="btn btn-secondary m-2 w-1/3" id="Filter-button">
    <select class="filter-price select select-ghost w-full max-w-xs">
      <option disabled selected>Filter</option>
      <option >$50-$200</option>
      <option >$200-$400</option>
      <option >$400-$800</option>
    </select></button>
  {{! <button class="btn btn-secondary m-2 w-1/3" id="Search-button"></button> }}
  {{! <div class="form-control">
  <div class="input-group">
    <input type="text" placeholder="Search…" class="input input-bordered" />
    <button class="btn btn-secondary m-2 w-1/3" id='Search-button'>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
    </button>
  </div>
</div> }}
  <div class="form-control m-2 w-1/3">
    <div class="input-group">
      <input
        type="text"
        placeholder="Search…"
        class="input input-bordered w-3/4"
      />
      <button class="btn btn-secondary w-1/4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
          ></path></svg>
      </button>
    </div>
  </div>
</div>

<div
  class="result w-full h-full flex flex-row flex-wrap justify-around"
  id="art-section"
>
  {{#each artPieces as |artPiece|}}
    <div class="card w-96 bg-base-100 shadow-xl m-3">
      <figure><img class="h-48" src={{artPiece.image}} alt="Art" /></figure>
      <div class="card-body">
        <div class="w-full text-center">
          <p class="text-3xl">${{artPiece.price}}</p>
        </div>
        <h2 class="card-title">{{artPiece.title}}</h2>
      </div>
    </div>
  {{/each}}
</div>