<div
  class="hero min-h-screen"
  style="background-image: url(/assets/2.png);"
>
</div>

<div class="w-11/12 mx-3 mt-10 mb-3 flex flex-row justify-around">
  
    <select class="select select-ghost w-full max-w-xs" style="border-color: #f73197;">
      <option style="background-color: black; color:white;" disabled selected>Sort By...</option>
      <option style="background-color: black; color:white;" ${{artPieces}}>Lower to Higher</option>
      <option style="background-color: black; color:white;" ${{artPieces}}>Higher to Low</option>
    </select>
  
  
    <select class="select select-ghost w-full max-w-xs" style="border-color: #1183c1;">
      <option disabled selected>Filter</option>
      <option>$50-$200</option>
      <option>$200-$400</option>
      <option>$400-$800</option>
    </select>
  {{! <button class="btn btn-secondary m-2 w-1/3" id="Search-button"></button> }}
  {{! <div class="form-control">
  <div class="input-group">
    <input type="text" placeholder="Search…" class="input input-bordered" />
    <button class="btn btn-secondary m-2 w-1/3" id='Search-button'>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
    </button>
  </div>
</div> }}
  <div class="form-control m-2 w-1/3">
    <div class="input-group">
      <input
        type="text"
        placeholder="Search…"
        class="input input-bordered w-3/4"
        style="background-color:black; border-color:#4e148c"
      />
      <button class="btn btn-secondary w-1/4"  style="background-color:#4e148c; border-color:#4e148c">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          style="color: white;"
        ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
          ></path></svg>
      </button>
    </div>
  </div>
</div>

<div
  class="w-full h-full flex flex-row flex-wrap justify-around"
  id="art-section"
>
  {{#each artPieces as |artPiece|}}
    <div class="card w-96 bg-base-100 shadow-xl m-3">
      <figure><img class="h-48" src={{artPiece.image}} alt="Art" /></figure>
      <div class="card-body">
        <div class="w-full text-center">
          <p class="text-3xl" style="color: white;">${{artPiece.price}}</p>
        </div>
        <h2 class="card-title" style="color: #f73197;">{{artPiece.title}}</h2>
      </div>
    </div>
  {{/each}}
</div>